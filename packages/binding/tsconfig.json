{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "outDir": "lib"
  },
  "include": ["src/**/*", "global.d.ts"]
}
